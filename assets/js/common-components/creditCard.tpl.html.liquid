<div class="panel panel-default">
    <div class="panel-heading">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <form accept-charset="UTF8" name="$ctrl.form" novalidate="novalidate">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group" ng-class="{'keyuped': $ctrl.card.bankCardNumber.$viewValue.lenght, 'error': ($ctrl.form.BankCardNumber.$dirty || $ctrl.form.$submitted) && $ctrl.form.BankCardNumber.$invalid }">
                                    <label for="#" class="form-label">{{ 'checkout.payment_method.card_number' | t }}</label>
                                    <input ng-model="$ctrl.card.bankCardNumber"
                                           cc-number="" cc-eager-type="" name="BankCardNumber"
                                           placeholder="{{ 'checkout.payment_method.card_number' | t }}"
                                           required="required" class="form-control" autofocus="" />
                                    <span class="field__icon icon icon--lock"></span>
                                    <span class="field__icon icon payment-icon has-tooltip"
                                          ng-class="{ 'American Express': 'payment-icon--american-express', 'Dankort': 'payment-icon--dankort', 'Diners Club' : 'payment-icon--diners-club',
                                  'Discover' : 'payment-icon--discover', 'JCB' :'payment-icon--jcb', 'Laser' : 'payment-icon--laser',
                                  'Maestro' : 'payment-icon--maestro', 'MasterCard' : 'payment-icon--master', 'UnionPay' : 'payment-icon--unionpay', 'Visa' : 'payment-icon--visa'}[$ctrl.form.BankCardNumber.$ccEagerType]"
                                          ng-if="$ctrl.form.BankCardNumber.$valid">
                                        <span class="tooltip" ng-bind="$ctrl.form.BankCardNumber.$ccEagerType"></span>
                                        <span class="payment-name" ng-bind="$ctrl.form.BankCardNumber.$ccEagerType"></span>
                                    </span>
                                    <span class="form-error" ng-if="($ctrl.form.BankCardNumber.$dirty || $ctrl.form.$submitted) && $ctrl.form.BankCardNumber.$error.required">{{ 'checkout.payment_method.required_card_number_message' | t }}</span>
                                    <span class="form-error" ng-if="($ctrl.form.BankCardNumber.$dirty || $ctrl.form.$submitted) && !$ctrl.form.BankCardNumber.$error.required && $ctrl.form.BankCardNumber.$invalid">{{ 'checkout.payment_method.invalid_card_number_message' | t }}</span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group" ng-class="{'keyuped': $ctrl.card.cardholderName., 'error': ($ctrl.form.cardholderName.$dirty || $ctrl.form.$submitted) && $ctrl.form.cardholderName.$invalid }">
                                    <label for="#" class="form-label">{{ 'checkout.payment_method.cardholder_name' | t }}</label>
                                    <input placeholder="{{ 'checkout.payment_method.cardholder_name' | t }}" type="text" id="BankCardCardholderName" class="form-control" name="BankCardCardholderName" required="required" ng-model="$ctrl.card.cardholderName" />

                                    <p class="form-error" ng-if="($ctrl.form.cardholderName.$dirty || $ctrl.form.$submitted) && $ctrl.form.cardholderName.$error.required">
                                        {{ 'checkout.payment_method.required_expiration_month_message' | t }}
                                    </p>
                                    <p class="form-error" ng-if="($ctrl.form.cardholderName.$dirty || $ctrl.form.$submitted) && !$ctrl.form.cardholderName.$error.required && $ctrl.form.cardholderName.$invalid">
                                        {{ 'checkout.payment_method.invalid_expiration_month_message' | t }}
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group" ng-class="{'keyuped': $ctrl.card.bankCardMonth., 'error': ($ctrl.form.BankCardExpirationMonth.$dirty || $ctrl.form.$submitted) && $ctrl.form.BankCardExpirationMonth.$invalid }">
                                    <label for="#" class="form-label">{{ 'checkout.payment_method.expiry_month' | t }}</label>
                                    <input placeholder="{{ 'checkout.payment_method.expiry_month' | t }}" type="text" id="BankCardExpirationMonth" class="form-control" cc-exp-month="" name="BankCardExpirationMonth" required="required" ng-model="$ctrl.card.bankCardMonth" />

                                    <p class="form-error" ng-if="($ctrl.form.BankCardExpirationMonth.$dirty || $ctrl.form.$submitted) && $ctrl.form.BankCardExpirationMonth.$error.required">
                                        {{ 'checkout.payment_method.required_expiration_month_message' | t }}
                                    </p>
                                    <p class="form-error" ng-if="($ctrl.form.BankCardExpirationMonth.$dirty || $ctrl.form.$submitted) && !$ctrl.form.BankCardExpirationMonth.$error.required && $ctrl.form.BankCardExpirationMonth.$invalid">
                                        {{ 'checkout.payment_method.invalid_expiration_month_message' | t }}
                                    </p>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group" ng-class="{'keyuped': $ctrl.form.BankCardExpirationYear., 'error': ($ctrl.form.BankCardExpirationYear.$dirty || $ctrl.form.$submitted) && $ctrl.form.BankCardExpirationYear.$invalid }">
                                    <label for="BankCardExpirationYear" class="form-label">{{ 'checkout.payment_method.expiry_year' | t }}</label>
                                    <input placeholder="{{ 'checkout.payment_method.expiry_year' | t }}" type="text" id="BankCardExpirationYear" class="form-control" cc-exp-year="" name="BankCardExpirationYear" required="required" ng-model="$ctrl.card.bankCardYear" />

                                    <p class="form-error" ng-if="($ctrl.form.BankCardExpirationYear.$dirty || $ctrl.form.$submitted) && $ctrl.form.BankCardExpirationYear.$error.required">
                                        {{ 'checkout.payment_method.required_expiration_year_message' | t }}
                                    </p>
                                    <p class="form-error" ng-if="($ctrl.form.BankCardExpirationYear.$dirty || $ctrl.form.$submitted) && !$ctrl.form.BankCardExpirationYear.$error.required && $ctrl.form.BankCardExpirationYear.$invalid">
                                        {{ 'checkout.payment_method.invalid_expiration_year_message' | t }}
                                    </p>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group" ng-class="{'keyuped': $ctrl.form.BankCardCvv.$viewValue , 'error': ($ctrl.form.BankCardCvv.$dirty || $ctrl.form.$submitted) && $ctrl.form.BankCardCvv.$invalid }">
                                    <label for="#" class="form-label">{{ 'checkout.payment_method.cvv' | t }}</label>
                                    <input type="text" placeholder="{{ 'checkout.payment_method.cvv' | t }}" class="form-control" id="BankCardCvv" cc-cvc="" cc-type="$ctrl.form.BankCardNumber.$ccType" name="BankCardCvv" required="required" ng-model="$ctrl.card.bankCardCVV2" />
                                    <span class="field__icon icon icon--question has-tooltip">
                                        <span class="tooltip">{{ 'checkout.payment_method.cvv_unknown_tooltip_text' | t }}</span>
                                    </span>
                                    <p class="form-error" ng-if="($ctrl.form.BankCardCvv.$dirty || $ctrl.form.$submitted) && $ctrl.form.BankCardCvv.$error.required">
                                        {{ 'checkout.payment_method.required_cvv_message' | t }}
                                    </p>
                                    <p class="form-error" ng-if="($ctrl.form.BankCardCvv.$dirty || $ctrl.form.$submitted) && !$ctrl.form.BankCardCvv.$error.required && $ctrl.form.BankCardCvv.$invalid">
                                        {{ 'checkout.payment_method.invalid_cvv_message' | t }}
                                    </p>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



{% comment %}
  Change product per page in collection with the 'page_size' query parameter.
{% endcomment %}
<div class="form-group">
    <label class="text-normal">{{ 'collections.general.products_per_page' | t }}</label>
    <ul class="pagination" ng-init="$collection.generatePageSizes({{ settings.product_list_capacity }}, {{ settings.product_list_capacity_steps }})">
        <li ng-repeat="pageSize in $collection.pageSizes" vc-query-target="$collection.pageSizeQuery" ng-class="{'active': $collection.pageSizeQuery.page_size == pageSize}">
            <a vc-query-source="{ page_size: [pageSize] }" switchable="false" ng-bind="pageSize"></a>
        </li>
    </ul>
</div>

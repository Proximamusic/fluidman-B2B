<script id="storefront.list-shared-link-dialog.tpl" type="text/ng-template">
    <div class="ajaxify-modal is-visible" id="ajaxifyModal" style="opacity: 1;">
        <button class="ajaxifyCart--close" title="{{ 'products.compare_list.close_dialog' | t }}" ng-click="close()">{{ 'products.compare_list.close_dialog' | t }}</button>
        <div class="ajaxifyCart--content" id="ajaxifyCart" ng-if="!dialogData.capacityExceeded">
            <span style="font-weight:bold;">{{ 'wishlist.general.copy_message' | t }}</span>
            <div class="cart-row">
                <div class="grid">
                    <div class="grid-item">
                        <a ng-bind="sharedLink"></a>
                    </div>
                </div>
            </div>
            <div class="cart-row">
                <div class="grid">
                    <div class="grid-item text-right">
                        <button class="btn btn-primary" style="margin-top: 0;" ng-click="close()">{{ 'products.compare_list.continue_shopping' | t }}</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="ajaxifyCart-overlay"></div>
</script>

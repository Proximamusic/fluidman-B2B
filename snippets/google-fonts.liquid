{% if settings.type_base_family contains 'Google' %}
  {% capture baseGoogleUrl %}{{ settings.type_base_family }}:{{ settings.type_base_weight }}{% endcapture %}
  {{ '//fonts.googleapis.com/css?family=' | append: baseGoogleUrl | stylesheet_tag }}
{% endif %}
{% if settings.type_header_family contains 'Google' %}
  {% unless settings.type_header_family == settings.type_base_family and settings.type_header_weight == settings.type_base_weight %}
    {% capture headerGoogleUrl %}{{ settings.type_header_family }}:{{ settings.type_header_weight }}{% endcapture %}
    {{ '//fonts.googleapis.com/css?family=' | append: headerGoogleUrl | stylesheet_tag }}
  {% endunless %}
{% endif %}
{% if settings.type_accent_family contains 'Google' %}
  {% unless settings.type_accent_family == settings.type_base_family and settings.type_accent_weight == settings.type_base_weight or settings.type_accent_family == settings.type_header_family and settings.type_accent_weight == settings.type_header_weight %}
    {% capture accentGoogleUrl %}{{ settings.type_accent_family }}:{{ settings.type_accent_weight }}{% endcapture %}
    {{ '//fonts.googleapis.com/css?family=' | append: accentGoogleUrl | stylesheet_tag }}
  {% endunless %}
{% endif %}
